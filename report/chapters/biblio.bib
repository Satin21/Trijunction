	title = {Quantized conductance doubling and hard gap in a two-dimensional semiconductor-superconductor heterostructure},
	url = {http://arxiv.org/abs/1603.01852 http://dx.doi.org/10.1038/ncomms12841},
	year = {2016},
	Bdsk-Url-1 = {http://arxiv.org/abs/1603.01852%20http://dx.doi.org/10.1038/ncomms12841},
	Bdsk-Url-2 = {https://doi.org/10.1038/ncomms12841}}

