@article{Karzig2015_2,
	abstract = {Topological quantum information processing relies on adiabatic braiding of non-Abelian quasiparticles. Performing the braiding operations in finite time introduces transitions out of the ground-state manifold and deviations from the non-Abelian Berry phase. We show that these errors can be eliminated by suitably designed counterdiabatic correction terms in the Hamiltonian. We implement the resulting shortcuts to adiabaticity for simple protocols of non-Abelian braiding and show that the error suppression can be substantial even for approximate realizations of the counterdiabatic terms.},
